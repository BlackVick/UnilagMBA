<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tti.unilagmba.UpdateUserInfo"
    android:background="@drawable/new_unilag_bacground"
    android:padding="0dp">

    <include layout="@layout/usla_app_bar_layout" android:id="@+id/changeInfoAppBar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateNameTxt"
            android:hint="UserName Change"
            android:textColor="@color/white"
            app:met_primaryColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="17sp"
            app:met_baseColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_clearButton="true"
            app:met_floatingLabelAnimating="true"
            android:inputType="text"
            android:ems="10"
            android:digits="0123456789qwertzuiopasdfghjklyxcvbnm "/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateStatusTxt"
            android:hint="Status Change"
            android:textColor="@color/white"
            app:met_primaryColor="@color/white"
            app:met_baseColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="17sp"
            app:met_floatingLabel="highlight"
            app:met_clearButton="true"
            app:met_floatingLabelAnimating="true"
            android:inputType="text"
            android:ems="10"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateMailTxt"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:met_primaryColor="@color/white"
            app:met_baseColor="@color/white"
            android:hint="Mail Change"
            android:textSize="17sp"
            app:met_floatingLabel="highlight"
            app:met_clearButton="true"
            app:met_floatingLabelAnimating="true"
            android:inputType="textEmailAddress"
            android:ems="10"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updatePhoneTxt"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:met_primaryColor="@color/white"
            android:hint="Phone Change"
            app:met_baseColor="@color/white"
            android:textSize="17sp"
            android:maxLength="11"
            app:met_floatingLabel="highlight"
            app:met_clearButton="true"
            app:met_floatingLabelAnimating="true"
            android:inputType="phone"
            android:ems="10"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateOccupationTxt"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:met_primaryColor="@color/white"
            android:hint="Occupation Change"
            app:met_baseColor="@color/white"
            android:textSize="17sp"
            app:met_floatingLabel="highlight"
            app:met_clearButton="true"
            app:met_floatingLabelAnimating="true"
            android:inputType="text"
            android:ems="10"/>

        <Button
            android:layout_margin="5dp"
            android:layout_gravity="end"
            android:background="@drawable/buttons"
            android:id="@+id/acceptInfoChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept Changes"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

    </LinearLayout>

</RelativeLayout>
