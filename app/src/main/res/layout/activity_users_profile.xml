<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tti.unilagmba.UsersProfile"
    android:padding="0dp"
    android:background="@drawable/backgroundgradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/usersProfileImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/profile"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Name"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="13dp"
            android:id="@+id/usersNameText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/usersStatusText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/sendFriendRequestBtn"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@drawable/buttons"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SEND FRIEND REQUEST"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/declineFriendRequestBtn"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@drawable/buttons"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="DECLINE FRIEND REQUEST"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>
